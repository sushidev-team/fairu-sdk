{
    "name": "sushidev/fairu-sdk",
    "description": "Laravel SDK for Fairu GraphQL API",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "SushiDev",
            "email": "hello@sushidev.de"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.0",
        "illuminate/support": "^9.0|^10.0|^11.0|^12.0",
        "illuminate/contracts": "^9.0|^10.0|^11.0|^12.0",
        "illuminate/cache": "^9.0|^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.0|^8.0|^9.0|^10.0",
        "pestphp/pest": "^2.0|^3.0",
        "pestphp/pest-plugin-laravel": "^2.0|^3.0"
    },
    "autoload": {
        "psr-4": {
            "SushiDev\\Fairu\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SushiDev\\Fairu\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "SushiDev\\Fairu\\FairuServiceProvider"
            ],
            "aliases": {
                "Fairu": "SushiDev\\Fairu\\Facades\\Fairu"
            }
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest",
        "test-coverage": "./vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
